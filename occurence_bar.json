{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "description": "Number of Occurrences vs. Year",
  "data": {"url": "https://raw.githubusercontent.com/suxyu/3179-a2/main/final_year.csv"},
  "transform": [
    {
      "calculate": "split(datum.date, '/')[2]",
      "as": "year"
    },
    {
      "aggregate": [{"op": "count", "as": "count"}],
      "groupby": ["year"]
    }
  ],
  "layer": [
    {
      "mark": "bar",
      "encoding": {
        "x": {
          "field": "year",
          "type": "ordinal",
          "title": "Year"
        },
        "y": {
          "field": "count",
          "type": "quantitative",
          "title": "Number of Occurrences"
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "bottom",
        "dy": -2
      },
      "encoding": {
        "x": {"field": "year", "type": "ordinal"},
        "y": {"field": "count", "type": "quantitative"},
        "text": {"field": "count", "type": "quantitative"}
      }
    }
  ]
}
