{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Australian Temperature distribution",
    "width": 800,
    "height": 400,
    "projection": {
        "type": "equalEarth"
    },
    "data": {
        "url": "https://raw.githubusercontent.com/suxyu/3179-a2/main/updated_states_provinces.json",
        "format": {
            "type": "topojson",
            "feature": "ne_10m_admin_1_states_provinces"
        }
    },
    "transform": [
        {
            "lookup": "properties.NAME",
            "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/suxyu/3179-a2/main/merged_weather.csv"
                },
                "key": "Country",
                "fields": [
                    "Active"
                ]
            }
        },
        {
            "calculate": "datum.Active + 0.1",
            "as": "Active Cases"
        }
    ],
    "mark": {
        "type": "geoshape"
    },
    "encoding": {
        "color": {
            "field": "properties.AvgTemps[yearSlider.Year]",
            "type": "quantitative",
            "title": "Average Temperature"
        },
        "tooltip": [
            {
                "field": "properties.NAME",
                "type": "nominal",
                "title": "Country"
            },
            {
                "field": "Active",
                "type": "quantitative"
            }
        ]
    },
    "selection": {
        "yearSlider": {
            "type": "single",
            "fields": [
                "Year"
            ],
            "bind": {
                "input": "range",
                "min": 2008,
                "max": 2022,
                "step": 1,
                "name": "Year"
            },
            "init": {
                "Year": 2008
            }
        }
    }
}