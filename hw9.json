{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": "Australian Cities Max Temperature",
  "projection": {"type": "mercator"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/suxyu/3179-a2/main/ne_1.json",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_admin_1_states_provinces"
        }
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/suxyu/3179-a2/main/ne_1.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_5"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/suxyu/3179-a2/main/merged_weather.csv"
      },
      "mark": {"type": "circle", "tooltip": {"content": "data"}},
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "size": {
          "field": "MaxTemp",
          "type": "quantitative",
          "title": "Magnitude (Richter scale)",
          "scale": {"domain": [1, 12], "type": "pow"}
        },
        "color": {
          "field": "MaxTemp",
          "type": "quantitative",
          "scale": {"scheme": "reds", "type": "linear"}
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "city"},
          {"field": "MaxTemp", "type": "quantitative"}
        ]
      }
    }
  ],
  "config": {}
}